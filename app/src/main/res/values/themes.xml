<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Prunity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/accent_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    
    <style name="ThemeOverlay.Widget.ProgressButton.Black" parent="">
        <item name="android:textAppearanceButton">@style/TextAppearance.ProgressButton.Black</item>
        <item name="android:colorControlHighlight">@color/black_700</item>
    </style>

    <!--The base text appearance for all buttons-->
    <style name="TextAppearance.Body.White" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/basic</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Text styiling for black button, with selector-->
    <style name="TextAppearance.ProgressButton.Black" parent="@style/TextAppearance.Body.White">
        <item name="android:textColor">@color/black_700</item>
    </style>

    <style name="Widget.ProgressButton.Black" parent="">
        <item name="android:theme">@style/ThemeOverlay.Widget.ProgressButton.Black</item>
        <item name="android:background">@drawable/progress_button_black</item>
    </style>

</resources>